@model RegattaManager.Models.Race

@{
    ViewData["Title"] = "Ziel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ziel</h2>
@if (ViewBag.RunningRacesCount > 0)
{
    <form asp-action="Index" asp-controller="Finish">
        <select name="id" id="id" asp-items="ViewBag.RunningRaces"></select>
        <input type="submit" class="btn btn-primary" value="Auswählen" />
    </form>
}

<table class="table">
    <tr>
        <th></th>
        <th>
            @Html.DisplayNameFor(model => model.Boatclass.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Raceclass.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Oldclass.Name)
        </th>
        <th>
            Rennstatus
        </th>
        <th>
            Startzeit
        </th>
        <th>
        </th>
        <th>
        </th>
    </tr>
    @if (@Model != null)
    {
        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
        </tr>
        <tr>
            <td bgcolor="#DDDDDD"></td>
            <td bgcolor="#DDDDDD">
                @Html.DisplayFor(model => Model.Boatclass.Name)
            </td>
            <td bgcolor="#DDDDDD">
                @Html.DisplayFor(model => Model.Raceclass.Name)
            </td>
            <td bgcolor="#DDDDDD">
                @if (Model.Gender == "M")
                {
                    @string.Format("männliche");
                }
                else if (Model.Gender == "W")
                {
                    @string.Format("weibliche");
                }
                else
                {
                    @string.Format("gemischte");
                }
                @Html.DisplayFor(model => Model.Oldclass.Name)
            </td>
            <td bgcolor="#DDDDDD">
                @Html.DisplayFor(model => Model.Racestatus.Name)
            </td>
            <td bgcolor="#DDDDDD">
                @Html.DisplayFor(model => Model.Starttime)
            </td>
            <td bgcolor="#DDDDDD"></td>
            <td bgcolor="#DDDDDD"></td>
        </tr>
        <tr>
            <td bgcolor="#EEEEEE"></td>
            <td bgcolor="#EEEEEE"><i>Startbahn</i></td>
            <td bgcolor="#EEEEEE"><i>Starter</i></td>
            <td bgcolor="#EEEEEE"><i>Verein</i></td>
            <td bgcolor="#EEEEEE"></td>
            <td bgcolor="#EEEEEE"></td>
            <td bgcolor="#EEEEEE"></td>
            <td bgcolor="#EEEEEE"></td>
        </tr>
        @foreach (var sb in ViewBag.startboats)
        {
            if (sb.RaceId == Model.RaceId)
            {
                @:
                <tr>
                    <td></td>
                    <td>@sb.Startslot</td>
                    <td>
                        @foreach (var sbm in ViewBag.startboatmembers)
                        {
                            if (sbm.StartboatId == sb.StartboatId)
                            {
                                foreach (var m in ViewBag.members)
                                {
                                    if (m.MemberId == sbm.MemberId)
                                    {
                                        @string.Format("{0}, {1}", m.LastName, m.FirstName);
                                        <br />
                                    }
                                }
                            }
                        }
                    </td>
                    <td>@sb.Club.Name</td>
                    <td>
                        <form asp-action="FinishStartboat" asp-controller="Finish" asp-route-id="@sb.StartboatId">
                            @if (sb.Placement != 0)
                            {
                                <a href="#" class="btn btn-success disabled">@sb.Placement</a>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-success">@ViewBag.pmmax</button>
                                <input type="hidden" name="placement" id="placement" value="@ViewBag.pmmax" />
                            }
                            <input type="hidden" name="statusid" id="statusid" value="3" />
                        </form>
                    </td>
                    <td>
                        <form asp-action="FinishStartboat" asp-controller="Finish" asp-route-id="@sb.StartboatId">
                            @if (sb.Placement != 0)
                            {
                                <button type="submit" class="btn btn-danger">Löschen</button>
                                <input type="hidden" name="placement" id="placement" value="0" />
                            }
                            else
                            {
                                <a href="#" class="btn btn-danger disabled">Löschen</a>
                            }
                            <input type="hidden" name="statusid" id="statusid" value="5" />
                        </form>
                    </td>
                    <td>
                        <form asp-action="FinishStartboat" asp-controller="Finish" asp-route-id="@sb.StartboatId">
                            @if (sb.Placement != 0)
                            {
                                <a href="#" class="btn btn-warning disabled">Gekentert</a>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-warning">Gekentert</button>
                                <input type="hidden" name="placement" id="placement" value="-1" />
                            }
                            <input type="hidden" name="statusid" id="statusid" value="4" />
                        </form>
                    </td>
                    <td>
                        <form asp-action="FinishStartboat" asp-controller="Finish" asp-route-id="@sb.StartboatId">
                            @if (sb.Placement != 0)
                            {
                                <a href="#" class="btn btn-warning disabled">falsch eingefahren</a>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-warning">falsch eingefahren</button>
                                <input type="hidden" name="placement" id="placement" value="-1" />
                            }
                            <input type="hidden" name="statusid" id="statusid" value="7" />
                        </form>
                    </td>
                </tr>
            }
        }

        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td colspan="2">
                <div class="panel panel-success">
                    <div class="panel-heading">
                        <h3 class="panel-title">Rennen Beenden</h3>
                    </div>
                    <div class="panel-body">
                        <a asp-action="FinishRace" asp-controller="Finish" asp-route-id="@Model.RaceId" class="btn btn-success">BEENDEN</a>
                    </div>
                </div>
            </td>
            <td></td>
            <td></td>
        </tr>
    }
</table>