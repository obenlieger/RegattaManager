@using Microsoft.AspNetCore.Identity
@using RegattaManager.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li><a asp-area="" asp-controller="Start" asp-action="Index">Start</a></li>
            <li><a asp-area="" asp-controller="Finish" asp-action="Index">Ziel</a></li>
            <li><a asp-area="" asp-controller="Race" asp-action="Index">Rennen</a></li>
            <li><a asp-area="" asp-controller="Regatta" asp-action="Index">Regatta</a></li>            
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Basiswerte <span class="caret"></span></a>
                <ul class="dropdown-menu" role="menu">
                    <li><a asp-area="" asp-controller="Club" asp-action="Index">Verein</a></li>
                    <li><a asp-area="" asp-controller="Raceclass" asp-action="Index">Rennklassen</a></li>
                    <li><a asp-area="" asp-controller="Boatclass" asp-action="Index">Bootsklassen</a></li>
                    <li><a asp-area="" asp-controller="Oldclass" asp-action="Index">Altersklassen</a></li>
                    <li><a asp-area="" asp-controller="Racestatus" asp-action="Index">Rennstati</a></li>
                    <li><a asp-area="" asp-controller="Startboatstatus" asp-action="Index">Startbootstati</a></li>
                    <li><a asp-area="" asp-controller="Water" asp-action="Index">Gew&auml;sser</a></li>
                </ul>
            </li>
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Hallo @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Ausloggen</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register">Registrieren</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login">Einloggen</a></li>
    </ul>
}
