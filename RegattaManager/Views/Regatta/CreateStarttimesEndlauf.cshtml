@model IEnumerable<RegattaManager.Models.Race>

@{
    ViewData["Title"] = "Startzeiten Erstellen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Startzeiten erstellen</h2>

<hr/>

Nächste Startzeit: <b>@(ViewBag.starttime.AddMinutes(ViewBag.minutestep))</b><br/>
Schritte zwischen Rennen: <b>@ViewBag.minutestep</b>

<table>
    <thead>
        <tr>
            <th>Nicht gesetzt</th>
            <th>Gesetzt</th>
        </tr>
    </thead>
    <tbody>
        <tr style="vertical-align:top">
            <td>
                <table class="table" border="1">
                <thead>
                    <tr>
                        <th>Race Code</th>
                        <th>Altersklasse</th>
                        <th>Strecke</th>
                        <th>Startzeit</th>
                        <th></th>
                    </tr>
                </thead>
                @foreach (var race in Model)
                {
                <tr>
                    <td>@race.RaceCode</td>
                    <td>
                        @if (race.Gender.Equals("M"))
                        {
                            @if (race.Oldclass.FromAge >= 17 && race.Oldclass.ToAge <= 99)
                            {
                                @:Herren
                            }
                            else if (race.Oldclass.FromAge >= 15 && race.Oldclass.ToAge <= 16)
                            {
                                @:männliche
                            }
                            @race.Oldclass.Name
                        }
                        else if (string.Equals(race.Gender, "W"))
                        {
                            @if (race.Oldclass.FromAge >= 17 && race.Oldclass.ToAge <= 99)
                            {
                                @:Damen
                                @race.Oldclass.Name
                            }
                            else if(race.Oldclass.FromAge >= 15 && race.Oldclass.ToAge <= 16)
                            {
                                @:weibliche
                                @race.Oldclass.Name
                            }
                            else
                            {
                                switch(race.Oldclass.Name)
                                {
                                    case "Schüler D":
                                        @:Schülerinnen D
                                        break;
                                    case "Schüler C7":
                                        @:Schülerinnen C7
                                        break;
                                    case "Schüler C8":
                                        @:Schülerinnen C8
                                        break;
                                    case "Schüler C9":
                                        @:Schülerinnen C9
                                        break;
                                    case "Schüler C":
                                        @:Schülerinnen C
                                        break;
                                    case "Schüler B10":
                                        @:Schülerinnen B10
                                        break;
                                    case "Schüler B11":
                                        @:Schülerinnen B11
                                        break;
                                    case "Schüler B12":
                                        @:Schülerinnen B12
                                        break;
                                    case "Schüler B":
                                        @:Schülerinnen B
                                        break;
                                    case "Schüler C/B10":
                                        @:Schülerinnen C/B10
                                        break;
                                    case "Schüler B11/B12":
                                        @:Schülerinnen B11/B12
                                        break;
                                    case "Schüler A13":
                                        @:Schülerinnen A13
                                        break;
                                    case "Schüler A14":
                                        @:Schülerinnen A14
                                        break;
                                    case "Schüler A":
                                        @:Schülerinnen A
                                        break;
                                    default:
                                        @race.Oldclass.Name
                                        break;
                                }
                            }
                        }
                        else if (string.Equals(race.Gender, "X"))
                        {
                            @:mixed
                            @race.Oldclass.Name
                        }
                        </td>
                    <td>@race.Boatclass.Name @race.Raceclass.Name</td>
                    <td>@race.Starttime</td>
                    <td>
                        <form asp-action="ConfigureRaceEndlauf" asp-controller="Regatta">
                            <input type="hidden" name="raceId" value="@race.RaceId"/>
                            <input type="hidden" name="starttime" value="@ViewBag.starttime" />
                            <input type="hidden" name="minutestep" value="@ViewBag.minutestep" />
                            <input type="submit" value="&gt;" class="btn btn-success btn-sm" />
                        </form>
                    </td>
                </tr>
                }
                </table>
            </td>
            <td>
                <table class="table" border="1">
                <thead>
                    <tr>
                        <th></th>
                        <th>Race Code</th>
                        <th>Altersklasse</th>
                        <th>Strecke</th>
                        <th>Startzeit</th>                        
                    </tr>
                </thead>
                @foreach (var cr in ViewBag.configuredRaces)
                {
                <tr>
                    <td>
                        <form asp-action="UnconfigureRaceEndlauf" asp-controller="Regatta">
                            <input type="hidden" name="raceId" value="@cr.RaceId"/>
                            <input type="submit" value="&lt;" class="btn btn-warning btn-sm" />
                        </form>
                    </td>
                    <td>@cr.RaceCode</td>
                    <td>
                        @if (cr.Gender.Equals("M"))
                        {
                            @if (cr.Oldclass.FromAge >= 17 && cr.Oldclass.ToAge <= 99)
                            {
                                @:Herren
                            }
                            else if (cr.Oldclass.FromAge >= 15 && cr.Oldclass.ToAge <= 16)
                            {
                                @:männliche
                            }
                            @cr.Oldclass.Name
                        }
                        else if (string.Equals(cr.Gender, "W"))
                        {
                            @if (cr.Oldclass.FromAge >= 17 && cr.Oldclass.ToAge <= 99)
                            {
                                @:Damen
                                @cr.Oldclass.Name
                            }
                            else if(cr.Oldclass.FromAge >= 15 && cr.Oldclass.ToAge <= 16)
                            {
                                @:weibliche
                                @cr.Oldclass.Name
                            }
                            else
                            {
                                switch(cr.Oldclass.Name)
                                {
                                    case "Schüler D":
                                        @:Schülerinnen D
                                        break;
                                    case "Schüler C7":
                                        @:Schülerinnen C7
                                        break;
                                    case "Schüler C8":
                                        @:Schülerinnen C8
                                        break;
                                    case "Schüler C9":
                                        @:Schülerinnen C9
                                        break;
                                    case "Schüler C":
                                        @:Schülerinnen C
                                        break;
                                    case "Schüler B10":
                                        @:Schülerinnen B10
                                        break;
                                    case "Schüler B11":
                                        @:Schülerinnen B11
                                        break;
                                    case "Schüler B12":
                                        @:Schülerinnen B12
                                        break;
                                    case "Schüler B":
                                        @:Schülerinnen B
                                        break;
                                    case "Schüler C/B10":
                                        @:Schülerinnen C/B10
                                        break;
                                    case "Schüler B11/B12":
                                        @:Schülerinnen B11/B12
                                        break;
                                    case "Schüler A13":
                                        @:Schülerinnen A13
                                        break;
                                    case "Schüler A14":
                                        @:Schülerinnen A14
                                        break;
                                    case "Schüler A":
                                        @:Schülerinnen A
                                        break;
                                    default:
                                        @cr.Oldclass.Name
                                        break;
                                }
                            }
                        }
                        else if (string.Equals(cr.Gender, "X"))
                        {
                            @:mixed
                            @cr.Oldclass.Name
                        }
                        </td>
                    <td>@cr.Boatclass.Name @cr.Raceclass.Name</td>
                    <td>
                        <form asp-action="UpdateRaceStarttimeEndlauf" asp-controller="Regatta">
                            <input type="hidden" name="raceId" value="@cr.RaceId" />
                            <input class="ui-timepicker-selected" type="datetime" name="starttime" value="@cr.Starttime" /> <input type="submit" value="OK" class="btn btn-primary btn-sm" />                            
                        </form>                        
                    </td>
                </tr>
                }
                </table>
            </td>
        </tr>
</tbody>
</table>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}